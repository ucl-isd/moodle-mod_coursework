{{!
    @template mod_coursework/submission_page

    Example context (json):
    {
        "title": "Submission",
        "markingguideurl": "https://example.com/marking-guide",
        "plagiarism": "<div>Plagiarism warning</div>",
        "late": true,
        "finalise": true,
        "form": "<form>...</form>"
    }
}}

<h3>{{{title}}}</h3>

{{#markingguideurl}}
<div class="my-3">
    <a href="{{{.}}}" target="_blank">
        <i class="fa-solid fa-circle-right mr-1"></i>
        {{#str}} marking_guide_preview, mod_coursework {{/str}}
    </a>
</div>
{{/markingguideurl}}

{{{plagiarism}}}

{{#late}}
    <div class="alert alert-warning">
        <div class="badge badge-pill badge-warning">
            {{#str}} late, mod_coursework {{/str}}
        </div>
        <br>
        {{#str}} late_submissions_warning, mod_coursework {{/str}}
    </div>
{{/late}}

{{#finalise}}
    <div class="alert alert-info">
        {{#str}} finalise_button_info, mod_coursework {{/str}}
    </div>
{{/finalise}}

{{{form}}}
