{{!
    @template mod_coursework/intro

    Template for displaying coursework intro.

    Example context (json):
    {
        "description": "<p>This assignment requires you to write an essay of approximately 1500 words on the impact of social media on political discourse. Please refer to the marking guide for specific criteria.</p>\n<ul>\n<li>Ensure you cite your sources correctly using APA style.</li>\n<li>The deadline for submission is clearly indicated below.</li>\n</ul>",
        "markingguideurl": "https://example.moodle.org/pluginfile.php/123/mod_resource/content/0/marking_guide.pdf",
        "duedate": "14th May 11:00am",
        "late": true,
        "deadlinewarning": true
    }
}}

{{#description}}
    <h3 class="h5">Description</h3>
    {{{.}}}
{{/description}}

{{#duedate}}
    <div>
    <h3 class="h6 d-inline">{{#str}} deadline, mod_coursework {{/str}}</h3>
    {{#deadlineextension}}
        <span class="crossed-out">
    {{/deadlineextension}}
    {{#userdate}}{{.}},{{#str}}strftimedatetime, langconfig{{/str}}{{/userdate}}
    {{#deadlineextension}}
        </span>
    {{/deadlineextension}}
    {{#latesubmissionsallowed}}
        <p class="small py-1">{{#str}} latesubmissionsallowed, mod_coursework {{/str}}</p>
    {{/latesubmissionsallowed}}
    {{#deadlinehaspassed}}
        <p class="small py-1">{{#str}} latesubmissionsnotallowed, mod_coursework {{/str}}</p>
    {{/deadlinehaspassed}}
    </div>
{{/duedate}}
{{^duedate}}
    <div>
    <h3 class="h6 d-inline">{{#str}} deadline, mod_coursework {{/str}}</h3>
    {{#str}} nocourseworkdeadline, mod_coursework {{/str}}
    </div>
{{/duedate}}
{{#deadlineextension}}
    <div>
    <h3 class="h6 d-inline">{{#str}} extended_deadline, mod_coursework {{/str}}</h3>
    {{#userdate}}{{.}},{{#str}}strftimedatetime, langconfig{{/str}}{{/userdate}}
    </div>
{{/deadlineextension}}

{{#late}}
    <br>
    <span class="badge badge-dark">Late submissions allowed</span>
{{/late}}

{{#deadlinemessage}}
    <p class="small py-1">{{{.}}}</p>
{{/deadlinemessage}}

{{#generalfeedbackdeadline}}
    <div>
    <h3 class="h6 d-inline">{{#str}} generalfeedbackdeadline, mod_coursework {{/str}}</h3>
    {{.}}
    </div>
{{/generalfeedbackdeadline}}

{{#individualfeedbackmessage }}
    <div>
    <h3 class="h6 d-inline">{{#str}} individualfeedback, mod_coursework {{/str}}</h3>
    {{.}}
    </div>
{{/individualfeedbackmessage }}


{{#markingguideurl}}
    <p class="pt-3">
        <a href="{{{.}}}" target="_blank">
            <i class="fa-solid fa-circle-right mr-2"></i>
            Marking guide
        </a>
    </p>
{{/markingguideurl}}

<hr>

