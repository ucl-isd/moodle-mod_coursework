{{!
    @template mod_coursework/feedback/advanced_grading

    Template for displaying advanced grading feedback.

    Example context (json):
    {
        "customgrading": [
            {
                "id": "1",
                "name": "Criterion 1",
                "description": "Description for criterion 1.",
                "score": "8",
                "maxscore": "10",
                "percent": "80",
                "hascomments": true,
                "remark": "Good work on this part."
            },
            {
                "id": "2",
                "name": "Criterion 2",
                "description": "Description for criterion 2.",
                "score": "3",
                "maxscore": "5",
                "percent": "60",
                "hascomments": true,
                "remark": "This is the remark for the chosen level.",
                "rubricdefinition": "This is the definition of the chosen rubric level."
            }
        ]
    }
}}

<ul class="list-unstyled">
    {{#customgrading}}
    <li id="behat-criterion-{{id}}">
        <h5 class="mb-0">{{name}}</h5>
        {{#description}}
        <div class="small">{{{description}}}</div>
        {{/description}}

        <div class="row pt-2">
            <div class="col-sm-3 mt-2">
                {{> mod_coursework/progress }}
            </div>

            <div class="col mt-2">
            {{#hascomments}}
                <div class="small text-muted">
                    {{#str}} feedback, mod_coursework {{/str}}
                </div>
                <div>
                    {{#remark}}
                    <div class="behat-criterion-remark {{#rubricdefinition}} mb-3 {{/rubricdefinition}}">
                        {{{.}}}
                    </div>
                    {{/remark}}

                    {{#rubricdefinition}}
                    <p>{{{.}}}</p>
                    {{/rubricdefinition}}
                </div>
            {{/hascomments}}
            </div>
        </div>
        <hr>
    </li>
    {{/customgrading}}
</ul>