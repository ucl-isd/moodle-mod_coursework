{{!
    @template mod_coursework/submissions/tr/marking

    Displays the marking information for a single submission in the submissions table.

    Example context (json):
    {
        "markers": [
            {
                "markerimg": "https://moodle.example.com/user/pix/f2",
                "markerurl": "https://moodle.example.com/user/profile.php?id=2",
                "markername": "Marker One",
                "timemodified": 1678886400,
                "mark": { "draft": true, "markurl": "...", "mark": "75.00", "markhidden": false }
            }
        ],
        "agreedmark": {
            "mark": { "readyforrelease": true, "url": "...", "markvalue": "78.00", "timemodified": 1678886500 }
        }
    }
}}
    <ol class="list-unstyled p-0 m-0" aria-label="{{#str}} markersandagreedmark, mod_coursework {{/str}}">

    {{#markers}}
    <li class="d-flex align-items-center mb-2" data-mark-stage="{{markingstage}}">
        <div>
            <span class="sr-only">{{#str}} assessor, mod_coursework {{/str}}</span>
            <div class="position-relative d-flex align-items-center">
                {{#markerimg}}
                    <div class="mr-2 bg-cover bg-light rounded-circle flex-shrink-0" style="background-image: url('{{markerimg}}'); height: 2rem; width: 2rem;"></div>
                {{/markerimg}}
                <div>
                    {{#markerurl}}
                        <a href="{{{.}}}" class="stretched-link" style="line-height: 1.25">
                    {{/markerurl}}

                        {{markername}}

                    {{#markerurl}}
                        </a>
                    {{/markerurl}}


                    {{#timemodified}}
                    <span class="sr-only">{{#str}} marked, mod_coursework {{/str}}</span>
                    <div class="small text-nowrap text-muted">
                        {{#userdate}}
                            {{.}}, {{#str}} strftimedatetime, langconfig {{/str}}
                        {{/userdate}}
                    </div>
                    {{/timemodified}}
                </div>
            </div>
        </div>

        {{#mark}}
        <div class="text-right ml-auto">
            <span class="sr-only">{{#str}} mark, mod_coursework {{/str}}</span>

            {{#draft}}
            <span class="badge badge-pill badge-light">
                {{#str}} draft, mod_coursework {{/str}}
            </span>
            {{/draft}}

            {{#markurl}}
            <a href="{{{markurl}}}" class="font-weight-bold pl-1">{{mark}}</a>
            {{/markurl}}

            {{! Marked and hidden from user. }}
            {{#markhidden}}
                {{^draft}}
                <span class="badge badge-pill badge-light">
                    <i class="fa-solid fa-circle-check my-1 mr-1 text-success"></i>
                    {{#str}} marked, mod_coursework {{/str}}
                </span>
                {{/draft}}
            {{/markhidden}}
        </div>
        {{/mark}}

        {{#addfeedback}}
        <div class="text-right ml-auto">
            <a data-mark-action="addfeedback" href="{{{markurl}}}" class="btn btn-primary btn-sm">{{#str}} add_feedback, mod_coursework {{/str}}</a>
        </div>
        {{/addfeedback}}

    </li>
    {{/markers}}

    {{#agreedmark}}
    <li class="d-flex align-items-center my-2" data-mark-stage="final_agreed">
        <div>
        <div>{{#str}} agreedmark, mod_coursework {{/str}}</div>
        {{#mark}}{{#released}}
            <div class="small text-muted">
                {{#timemodified}}
                    {{#userdate}}
                        {{.}}, {{#str}} strftimedatetime, langconfig {{/str}}
                    {{/userdate}}
                {{/timemodified}}
            </div>
        {{/released}}{{/mark}}
        </div>

        <div class="text-right ml-auto">
        {{#mark}}
            {{#draft}}
                <span class="badge badge-pill badge-secondary">{{#str}} draft, mod_coursework {{/str}}</span>
            {{/draft}}

            {{#readyforrelease}}
                <span class="badge badge-pill badge-warning">
                <i class="fa-solid fa-circle-check my-1 mr-1"></i>
                {{#str}} ready_release, mod_coursework {{/str}}</span>
            {{/readyforrelease}}

            {{! Released. }}
            {{#released}}
                <span class="badge badge-pill badge-success">
                    <i class="fa-solid fa-circle-check my-1 mr-1"></i>
                    {{#str}} statusreleased, mod_coursework {{/str}}
                </span>
            {{/released}}

            <a href="{{{url}}}" class="font-weight-bold pl-1 agreed-feedback-grade" data-mark="{{markvalue}}">{{markvalue}}</a>
        {{/mark}}

        {{#addfinalfeedback}}
        <a href="{{{url}}}" class="btn btn-sm btn-success">{{#str}} add_agreed_feedback, mod_coursework {{/str}}</a>
        {{/addfinalfeedback}}
    </div>
    </li>
    {{/agreedmark}}
    </ol>