{{!
    @template mod_coursework/submissions/tr/marking

    Displays the marking information for a single submission in the submissions table.

    Example context (json):
    {
        "markers": [
            {
                "markerimg": "https://moodle.example.com/user/pix/f2",
                "markerurl": "https://moodle.example.com/user/profile.php?id=2",
                "markername": "Marker One",
                "timemodified": 1678886400,
                "mark": { "draft": true, "markurl": "...", "mark": "75.00", "markhidden": false }
            }
        ],
        "agreedmark": {
            "mark": { "readyforrelease": true, "url": "...", "markvalue": "78.00", "timemodified": 1678886500 }
        },
        "moderation": {
            "mark": { "readyforrelease": true, "url": "...", "markvalue": "Agreed", "timemodified": 1678886600, "moderatorname": "Moderator Name" }
        }
    }
}}
    <ol class="list-unstyled p-0 m-0" aria-label="{{#str}} markersandagreedmark, mod_coursework {{/str}}">

    {{#markers}}
    <li class="d-flex align-items-center mb-2" data-behat-markstage="{{markingstage}}">
        <div>
            <span class="sr-only">{{#str}} marker, mod_coursework {{/str}}</span>
            <div class="position-relative d-flex align-items-center">
                {{#markerimg}}
                    <div class="mr-2 bg-cover bg-light rounded-circle flex-shrink-0" style="background-image: url('{{markerimg}}'); height: 2rem; width: 2rem;"></div>
                {{/markerimg}}
                <div>
                    {{#markerurl}}
                        <a href="{{{.}}}" class="stretched-link" style="line-height: 1.25">
                    {{/markerurl}}

                        {{markername}}

                    {{#markerurl}}
                        </a>
                    {{/markerurl}}


                    {{#timemodified}}
                    <span class="sr-only">{{#str}} marked, mod_coursework {{/str}}</span>
                    <div class="small text-nowrap text-muted">
                        {{#userdate}}
                            {{.}}, {{#str}} strftimedatetime, langconfig {{/str}}
                        {{/userdate}}
                    </div>
                    {{/timemodified}}
                </div>
            </div>
        </div>

        {{#showmark}}
        <div class="text-right ml-auto">
            <span class="sr-only">{{#str}} mark, mod_coursework {{/str}}</span>

            {{#draft}}
            <span class="badge badge-pill badge-light">
                {{#str}} draft, mod_coursework {{/str}}
            </span>
            {{/draft}}
            {{#moderation}}
                {{#mark}}
                    {{#readyforrelease}}
                        <span class="badge badge-pill badge-warning">
                        <i class="fa-solid fa-circle-check my-1 mr-1"></i>
                            {{#str}} ready_release, mod_coursework {{/str}}</span>
                    {{/readyforrelease}}
                {{/mark}}
                {{! Un-moderated submissions in a moderated coursework may still be released }}
                {{#submission.submissiondata.released}}
                    <span class="badge badge-pill badge-success">
                        <i class="fa-solid fa-circle-check my-1 mr-1"></i>
                        {{#str}} statusreleased, mod_coursework {{/str}}
                    </span>
                {{/submission.submissiondata.released}}
            {{/moderation}}
            {{#markurl}}
            <a data-mark-action="editfeedback" data-behat-feedbackid="{{feedbackid}}" href="{{{markurl}}}" class="font-weight-bold pl-1">{{{mark}}}</a>
            {{/markurl}}

            {{! Marked and hidden from user. }}
            {{#markhidden}}
                {{^draft}}
                <span class="badge badge-pill badge-light">
                    <i class="fa-solid fa-circle-check my-1 mr-1 text-success"></i>
                    {{#str}} marked, mod_coursework {{/str}}
                </span>
                {{/draft}}
            {{/markhidden}}
        </div>
        {{/showmark}}

        {{#addfeedback}}
        <div class="text-right ml-auto">
            <a data-mark-action="addfeedback" href="{{{markurl}}}" class="btn btn-primary btn-sm">{{#str}} addmark, mod_coursework {{/str}}</a>
        </div>
        {{/addfeedback}}

    </li>
    {{/markers}}

    {{#agreedmark}}
    <li class="d-flex align-items-center my-2" data-behat-markstage="final_agreed">
        <div>
            <div>{{#str}} agreedmark, mod_coursework {{/str}}</div>
            {{#mark}}
                <div class="small text-muted">
                    {{{markername}}} &middot;
                    {{#timemodified}}
                        {{#userdate}}
                            {{.}}, {{#str}} strftimedatetime, langconfig {{/str}}
                        {{/userdate}}
                    {{/timemodified}}
                </div>
            {{/mark}}
            </div>

            <div class="text-right ml-auto">
            {{#mark}}
                {{#draft}}
                    <span class="badge badge-pill badge-secondary">{{#str}} draft, mod_coursework {{/str}}</span>
                {{/draft}}

                {{#readyforrelease}}
                    <span class="badge badge-pill badge-warning">
                    <i class="fa-solid fa-circle-check my-1 mr-1"></i>
                    {{#str}} ready_release, mod_coursework {{/str}}</span>
                {{/readyforrelease}}

                {{! Released. }}
                {{#released}}
                    <span class="badge badge-pill badge-success">
                        <i class="fa-solid fa-circle-check my-1 mr-1"></i>
                        {{#str}} statusreleased, mod_coursework {{/str}}
                    </span>
                {{/released}}

                <a href="{{{url}}}" class="font-weight-bold pl-1" data-mark-action="editfeedback" data-mark="{{markvalue}}">{{markvalue}}</a>
            {{/mark}}

            {{#addfinalfeedback}}
            <a href="{{{url}}}" class="btn btn-sm btn-success" data-mark-action="addfeedback">{{#str}} agree_marking, mod_coursework {{/str}}</a>
            {{/addfinalfeedback}}
        </div>
    </li>
    {{/agreedmark}}

    {{#moderation}}
        <li class="d-flex align-items-center my-2" data-behat-markstage="moderation">
                <div>
                    <div>{{#str}} moderations, mod_coursework {{/str}}</div>
                    {{#mark}}
                        <div class="small text-muted">
                            {{#timemodified}}
                                {{moderatorname}} &middot;
                                {{#userdate}}
                                    {{.}}, {{#str}} strftimedatetime, langconfig {{/str}}
                                {{/userdate}}
                            {{/timemodified}}
                        </div>
                    {{/mark}}
                </div>
            <div class="text-right ml-auto">
                {{#mark}}
                    {{#url}}
                        <a class="ml-1" href="{{{url}}}" data-behat-mark="{{markvalue}}">{{markvalue}}</a>
                    {{/url}}
                    {{^url}}
                    {{! User can see but not edit/add moderation }}
                        <span>{{{markvalue}}}</span>
                    {{/url}}
                {{/mark}}
                {{#addmoderation}}
                    <a class="btn btn-sm btn-success" href="{{{url}}}" data-behat-mark-action="addmoderation">{{#str}} agree_marking, mod_coursework {{/str}}</a>
                {{/addmoderation}}
            </div>
        </li>
    {{/moderation}}
    </ol>
