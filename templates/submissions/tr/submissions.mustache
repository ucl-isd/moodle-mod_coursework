{{#submission}}
    {{#submissiondata}}
        {{#files}}
            <div class="position-relative d-flex align-items-center pb-2">
                    <div class="rounded-circle border border-primary d-flex align-items-center justify-content-center flex-shrink-0 mr-2" style="height: 2rem; width: 2rem;">
                    <i class="fa-regular fa-file-lines text-primary"></i>
                    </div>
                <div>
                {{^finalised}}
                            <span class="badge badge-light">
                                {{#str}} draft, mod_coursework {{/str}}
                            </span>
                        {{/finalised}}
                    <a href="{{{url}}}" class="stretched-link text-break line-clamp-1" title="{{filename}}" style="line-height: 1.25;">
                        {{filename}}
                    </a>

                {{#datemodified}}
                    <div class="small text-nowrap text-muted">
                        <span class="sr-only">
                            {{#str}} submitted, mod_coursework {{/str}}
                        </span>


                        {{#userdate}}
                            {{.}},{{#str}} strftimedatetime, langconfig {{/str}}
                        {{/userdate}}
                    </div>
                {{/datemodified}}
                </div>
            </div>

            {{#extensiondeadline}}
                <div class="py-1">
                    <span class="badge badge-light">
                        {{#str}} extension, mod_coursework {{/str}}
                    </span>
                    <br>
                    <small>
                    {{#userdate}}
                        {{.}},{{#str}} strftimedatetime, langconfig {{/str}}
                    {{/userdate}}
                    </small>
                </div>
            {{/extensiondeadline}}

            {{#submittedlate}}
                <span class="badge badge-warning">
                    {{#str}} submitted_late, mod_coursework {{/str}}
                </span>
            {{/submittedlate}}

            {{#flaggedplagiarism}}
                <span class="badge badge-danger">
                    {{#str}} flagged_plagiarism, mod_coursework {{/str}}
                </span>
            {{/flaggedplagiarism}}

            {{#plagiarismlinks}}
                <br>
                <span class="sr-only">
                    {{#str}} plagiarism_report, mod_coursework {{/str}}
                </span>
                {{{plagiarismlinks}}}
                <br>
            {{/plagiarismlinks}}
        {{/files}}
    {{/submissiondata}}

    {{^submissiondata}}
        {{^extensiongranted}}
            {{#personaldeadline}}
                <div>
                    {{#str}} personal_deadline, mod_coursework {{/str}}
                    <br>
                    {{#userdate}}
                        {{.}},{{#str}} strftimedatetime, langconfig {{/str}}
                    {{/userdate}}
                </div>
            {{/personaldeadline}}
        {{/extensiongranted}}

        {{#extensiondeadline}}
            <div>
                <span class="badge badge-light">
                    {{#str}} extension, mod_coursework {{/str}}
                </span>
                <br>
                {{#userdate}}
                    {{.}},{{#str}} strftimedatetime, langconfig {{/str}}
                {{/userdate}}
            </div>
        {{/extensiondeadline}}

    {{/submissiondata}}

{{/submission}}