<tr data-status="{{status}}" data-marker="{{{markerfilter}}}">
        {{! User. }}
        <td>
            <div class="d-flex align-items-center">
                {{#studentimg}}
                    <div class="mr-2 bg-cover bg-light rounded-circle flex-shrink-0" style="background-image: url('{{studentimg}}'); height: 2rem; width: 2rem;"></div>
                {{/studentimg}}
            {{{student}}}
            </div>
        </td>

        {{! Submission. }}
        <td>
            {{#submission}}
                {{#submissiondata}}
                    {{#flaggedplagiarism}}
                        <span class="badge badge-danger">Flagged for plagiarism</span><br>
                    {{/flaggedplagiarism}}
                    {{#submittedlate}}
                        <span class="badge badge-warning">Submitted late</span><br>
                    {{/submittedlate}}
                    {{#datemodified}}
                    <span class="sr-only">Date submitted</span>
                        <small>
                            {{#userdate}}
                                {{.}},{{#str}}strftimedatetime, langconfig{{/str}}
                            {{/userdate}}
                        </small><br>
                    {{/datemodified}}
                    {{#files}}
                        <span class="sr-only">File submitted</span><a href="{{{url}}}"><i class="fa-regular fa-file-lines mr-2"></i>{{filename}}</a><br>
                        {{#plagiarismlinks}}
                            <span class="sr-only">Plagiarism report</span>{{{plagiarismlinks}}}<br>
                        {{/plagiarismlinks}}
                    {{/files}}
                {{/submissiondata}}
                {{^submissiondata}}
                    {{#extensiongranted}}
                        <span class="badge badge-success">Extension granted</span><br>
                        {{#extensiondeadline}}
                            <span class="sr-only">Due date</span>
                            <small>Due:
                                {{#userdate}}
                                    {{.}},{{#str}}strftimedatetime, langconfig{{/str}}
                                {{/userdate}}
                            </small><br>
                        {{/extensiondeadline}}
                    {{/extensiongranted}}
                    {{^extensiongranted}}
                        {{#duedate}}
                            <span class="sr-only">Due date</span>
                            <small>Due:
                                {{#userdate}}
                                    {{.}},{{#str}}strftimedatetime, langconfig{{/str}}
                                {{/userdate}}
                            </small>
                        {{/duedate}}
                    {{/extensiongranted}}
                {{/submissiondata}}
            {{/submission}}
        </td>

        {{! Marking. }}
        <td class="marking-col">
            <ol class="list-unstyled p-0 m-0" aria-label="Markers and agreed mark">
                {{#markers}}
                <li class="d-flex mb-2">
                    <div>
                        <span class="sr-only">Marker </span>
                        <a href="{{{markerurl}}}" class="d-flex align-items-center">
                        {{#markerimg}}
                        <div class="mr-2 bg-cover bg-light rounded-circle flex-shrink-0" style="background-image: url('{{markerimg}}'); height: 2rem; width: 2rem;"></div>
                        {{/markerimg}}
                        {{markername}}
                        </a>
                    </div>

                    {{#mark}}
                    <div class="text-right ml-auto">
                        <span class="sr-only">Mark </span>

                        {{#draft}}
                        <span class="badge badge-secondary">Draft</span>
                        {{/draft}}

                        {{! Finalised. }}
                        {{^draft}}
                            {{#timemodified}}
                                <small>
                                {{#userdate}}
                                    {{.}},{{#str}}strftimedatetime, langconfig{{/str}}
                                {{/userdate}}
                                </small>
                            {{/timemodified}}
                        {{/draft}}

                        <a href="{{{markurl}}}" class="font-weight-bold pl-1">{{.}}</a>
                    </div>
                    {{/mark}}

                    {{#addfeedback}}
                    <div class="text-right ml-auto">
                        <a href="{{{markurl}}}" class="btn btn-primary btn-sm">Add feedback</a>
                    </div>
                    {{/addfeedback}}
                </li>
                {{/markers}}
                <!-- No allocated markers. -->
                {{^markers}}
                <li class="d-flex mb-2">
                    <div>
                        hello
                    </div>
                    {{#addfeedback}}
                        <div class="text-right ml-auto">
                            <a href="{{{url}}}" class="btn btn-primary btn-sm">Add feedback</a>
                        </div>
                    {{/addfeedback}}
                </li>
                {{/markers}}

                {{#agreedmark}}
                <li class="d-flex mb-2">
                    <div>Agreed mark</div>
                    <div class="text-right ml-auto">
                    {{#mark}}
                        {{#draft}}
                            <span class="badge badge-secondary">Draft</span>
                        {{/draft}}

                        {{#readyforrelease}}
                            <span class="badge badge-warning">Ready for release</span>
                        {{/readyforrelease}}

                        {{! Released. }}
                        {{#released}}
                            {{#timemodified}}
                                <small>
                                {{#userdate}}
                                    {{.}},{{#str}}strftimedatetime, langconfig{{/str}}
                                {{/userdate}}
                                </small>
                            {{/timemodified}}
                            <span class="badge badge-success">Released</span>
                        {{/released}}

                        <a href="{{{url}}}" class="font-weight-bold pl-1">{{mark}}</a>
                    {{/mark}}

                    {{#addfinalfeedback}}
                    <a href="{{{url}}}" class="btn btn-sm btn-success">Add agreed feedback</a>
                    {{/addfinalfeedback}}
                </div>
                </li>
                {{/agreedmark}}
            </ol>
        </td>

        {{! Actions. }}
        <td class="text-right">
          {{> mod_coursework/submissions/actions }}
        </td>
</tr>