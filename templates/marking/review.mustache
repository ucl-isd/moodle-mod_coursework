{{!
    @template mod_coursework/marking/review

    Example context (json):
    {
        "reviewcriteria": [
            {
                "name": "Criterion 1: Structure and Argument",
                "markers": [
                    {
                        "label": "Marker 1",
                        "score": "8.00",
                        "maxscore": "10.00",
                        "percent": 80,
                        "remark": "<p>The structure was logical and the argument was mostly clear.</p>"
                    },
                    {
                        "label": "Marker 2",
                        "score": "7.00",
                        "maxscore": "10.00",
                        "percent": 70,
                        "remark": "<p>A good effort, but the argument could have been supported with more evidence in places.</p>"
                    }
                ]
            },
            {
                "name": "Criterion 2: Research and Referencing",
                "markers": [
                    {
                        "label": "Marker 1",
                        "score": "15.00",
                        "maxscore": "20.00",
                        "percent": 75,
                        "remark": "<p>Good use of sources, but some minor errors in APA formatting.</p>"
                    }
                ]
            }
        ]
    }
}}
<div class="d-none" id="review-source-wrapper">
    <ul class="pl-3">
    {{#reviewcriteria}}
        <li>
            <div class="line-clamp-2">
                {{name}}
            </div>

            <div class="review-marks animate-enter">
                <div class="row small mt-2">
                    {{#markers}}
                    <div class="col-md">
                        <div>{{label}}: {{score}}/{{maxscore}}</div>
                        <div class="progress" style="height:.5rem; max-width: 200px;">
                            <div class="progress-bar bg-success"
                                role="progressbar"
                                aria-valuenow="{{score}}"
                                style="width: {{percent}}%"
                                aria-valuemin="0"
                                aria-valuemax="{{maxscore}}">
                            </div>
                        </div>

                        {{#remark}}
                        <div class="mt-2">
                            <div class="small text-muted">
                            {{#str}} feedback, mod_coursework {{/str}}
                            </div>
                            {{{.}}}
                        </div>
                        {{/remark}}
                    </div>
                    {{/markers}}
                </div>
                <hr>
            </div>
        </li>
    {{/reviewcriteria}}
    </ul>
</div>

<script>
(function() {
    window.addEventListener('DOMContentLoaded', function() {
        const sourceBlocks = document.querySelectorAll('#review-source-wrapper .review-marks');
        const targetCells = document.querySelectorAll('.gradingform_rubric .description, #advancedgrading-criteria .criterionshortname');
        sourceBlocks.forEach((block, index) => {
            if (targetCells[index]) {
                // Append progress to rubric.
                targetCells[index].appendChild(block);
            }
        });
    });
})();
</script>