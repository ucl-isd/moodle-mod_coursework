{{!
    @template mod_coursework/marking/pdf

    Example context (json):
    {
        "pdfurl": "https://moodle.example.com/pluginfile.php/123/mod_coursework/submission/1/submission.pdf",
    }
}}

<div id="pdf-container" class="mx-auto">

    {{! Submissions metadata. }}
    {{> mod_coursework/submissions/tr/submissions }}

    {{! Pdf viewer. }}
    <div id="pdf-viewer" class="container border m-0 p-0"></div>
</div>

<script type="module">
    // Import pdf.js library.
    import * as pdfjsLib from 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/5.4.149/pdf.min.mjs';
    pdfjsLib.GlobalWorkerOptions.workerSrc = "https://cdnjs.cloudflare.com/ajax/libs/pdf.js/5.4.149/pdf.worker.min.mjs";

    // Pass library object to AMD module.
    require(['mod_coursework/pdf'], function(pdf) {
        pdf.init(pdfjsLib, "{{{pdfurl}}}");
    });
</script>