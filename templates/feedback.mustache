<small>In feedback mustache...</small>
<div class="coursework-feedback">
    <h3>{{title}}</h3>

    {{! Feedback Comment }}
    {{#feedbackcomment}}
    <div>
        {{{feedbackcomment}}}
    </div>
    {{/feedbackcomment}}

    {{! Feedback Files }}
    {{#hasfeedbackfiles}}
    <div>
        <strong>Files:</strong>
        {{{feedbackfileshtml}}}
    </div>
    {{/hasfeedbackfiles}}

    {{! Advanced Grading }}
    {{#hasadvancedgrading}}
    <div class="py-3">
        <div>
            {{{advancedgradinghtml}}}
        </div>
    </div>
    {{/hasadvancedgrading}}

    {{! Marker Information }}
    <div>
        <strong class="d-block mb-1">Marker</strong>
        <div class="d-flex align-items-center">
            {{#markerimg}}
            <div class="mr-2 bg-cover bg-light rounded-circle flex-shrink-0" style="background-image: url('{{markerimg}}'); height: 3rem; width: 3rem;"></div>
            {{/markerimg}}
            <span>{{markername}}</span>
        </div>
    </div>
    <hr>
</div>

