{{!
    @template mod_coursework/feedback

    Template for displaying student feedback.

    Example context (json):
    {
        "title": "Feedback for Jan Černý",
        "feedbackcomment": "<div><p>This is the feedback</p></div>",
        "hasfeedbackfiles": true,
        "feedbackfileshtml": "<a href="foo">Feedbackfile.doc</a>",
        "hasadvancedgrading": true,
        "advancedgradinghtml": "<div>stuff from grading plugin - tables and kitchen sink html</div>",
        "markerimg": "https://randomuser.me/api/portraits/women/22.jpg",
        "markername": "Denise Soto"



    }
}}
<div class="coursework-feedback">
    <h3 class="h5">{{title}}</h3>

    <div class="py-3">

        {{#markername}}
        <div class="d-flex">
            {{#markerimg}}
                <div class="mr-2 bg-cover bg-light rounded-circle flex-shrink-0" style="background-image: url('{{markerimg}}'); height: 4rem; width: 4rem;"></div>
            {{/markerimg}}
            <div>
                <b>{{markername}}</b>
                <br>
                {{#userdate}}{{date}},{{#str}}strftimedatetime, langconfig{{/str}}{{/userdate}}
            </div>
        </div>
        <hr>
        {{/markername}}

        {{! Feedback Comment }}
        {{#feedbackcomment}}
        <div>
            {{{feedbackcomment}}}
        </div>
        {{/feedbackcomment}}

        {{! Feedback Files }}
        {{#hasfeedbackfiles}}
        <div>
            {{{feedbackfileshtml}}}
        </div>
        {{/hasfeedbackfiles}}
    </div>


     {{! Advanced Grading }}
    {{#hasadvancedgrading}}
    <div class="py-3">
        <h3 class="h5">Marking critera feedback</h3>
        <div>
            {{{advancedgradinghtml}}}
        </div>
    </div>
    {{/hasadvancedgrading}}
</div>
<hr>

