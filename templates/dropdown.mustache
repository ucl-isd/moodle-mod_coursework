{{!
    @template mod_coursework/dropdown

    Template for a bootstrap dropdown.

    Example context (json):
    {
        "id": "download",
        "name": "Download",

    }
}}
<div class="d-inline-block mr-2">
    <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" id="{{id}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa-solid fa-{{id}} mr-2"></i>{{name}}
    </button>
    <div class="dropdown-menu" aria-labelledby="{{id}}">
    {{#action}}
        <a class="dropdown-item" href="{{{url}}}">{{{title}}}</a>
    {{/action}}
    </div>
</div>